<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemBackground="@color/dahada_1"
        app:itemIconTint="@color/cardview_light_background"
        app:itemTextColor="@color/design_default_color_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_bottom" />

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="9dp"
            app:layout_constraintBottom_toTopOf="@id/button_recipe"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:srcCompat="@drawable/_" />

        <Button
            android:id="@+id/button_recipe"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="56dp"
            android:layout_marginLeft="56dp"
            android:layout_marginBottom="300dp"
            android:background="@drawable/recipe"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/button_diet"
            app:layout_constraintStart_toStartOf="@+id/imageView3"></Button>

        <Button
            android:id="@+id/button_diet"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="166dp"
            android:layout_marginLeft="100dp"
            android:layout_marginBottom="300dp"
            android:background="@drawable/lunch"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/button_recipe"
            app:layout_constraintStart_toStartOf="@+id/imageView3" />

        <Button
            android:id="@+id/button_shopping"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="276dp"
            android:layout_marginLeft="300dp"
            android:layout_marginBottom="300dp"
            android:background="@drawable/supermarket"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/button_diet"
            app:layout_constraintStart_toStartOf="@+id/imageView3" />

        <Button
            android:id="@+id/button_exercisemap"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="56dp"
            android:layout_marginLeft="56dp"
            android:layout_marginBottom="170dp"
            android:background="@drawable/exercisemap"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/button_diet"
            app:layout_constraintStart_toStartOf="@+id/imageView3" />

        <Button
            android:id="@+id/button__LoginPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70dp"
            android:background="@color/dahada_1"
            android:text="돌아가기"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" ></Button>

        <TextView
            android:id="@+id/textView_recipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:text="추천 레시피"
            android:textColor="@color/dahada_1"
            app:layout_constraintEnd_toEndOf="@+id/button_recipe"
            app:layout_constraintTop_toBottomOf="@+id/button_recipe" />

        <TextView
            android:id="@+id/textView_diet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:text="식단 만들기"
            android:textColor="@color/dahada_1"
            app:layout_constraintEnd_toEndOf="@+id/button_diet"
            app:layout_constraintTop_toBottomOf="@+id/button_diet" />

        <TextView
            android:id="@+id/textView_shopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:text="쇼핑하기"
            android:textColor="@color/dahada_1"
            app:layout_constraintEnd_toEndOf="@id/button_shopping"
            app:layout_constraintTop_toBottomOf="@id/button_shopping" />

        <TextView
            android:id="@+id/textView_exercisemap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:text="내 운동코스"
            android:textColor="@color/dahada_1"
            app:layout_constraintEnd_toEndOf="@id/button_exercisemap"
            app:layout_constraintTop_toBottomOf="@id/button_exercisemap" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>